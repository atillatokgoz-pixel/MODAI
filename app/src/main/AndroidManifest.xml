<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".ModaiApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NaifDeneme"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.NaifDeneme"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- ðŸ”¥ YENÄ°: Deep linking for notifications -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="modai" android:host="water" />
            </intent-filter>
        </activity>

        <!-- Habit Widget Receiver -->
        <receiver
            android:name=".widget.HabitWidgetProvider"
            android:label="AlÄ±ÅŸkanlÄ±klar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/habit_widget_info" />
        </receiver>

        <!-- Notes Widget Receiver -->
        <receiver
            android:name=".widget.NotesWidgetProvider"
            android:label="Notlar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/notes_widget_info" />
        </receiver>

        <!-- Finance Widget Receiver -->
        <receiver
            android:name=".widget.FinanceWidgetProvider"
            android:label="Finans"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/finance_widget_info" />
        </receiver>

        <!-- Habit Complete Receiver -->
        <receiver
            android:name=".HabitCompleteReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.naifdeneme.COMPLETE_HABIT" />
            </intent-filter>
        </receiver>

        <!-- ðŸ”¥ YENÄ°: Quick Add Water Receiver -->
        <receiver
            android:name=".QuickAddWaterReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.naifdeneme.ACTION_ADD_WATER" />
            </intent-filter>
        </receiver>

    </application>

</manifest>